{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@configs/*": [
        "configs/*"
      ],
      "@data-access/*": [
        "data-access/*"
      ],
      "@factories/*": [
        "factories/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "types": [
      "node",
      "playwright"
    ]
  },
  "include": [
    "configs",
    "data-access",
    "factories",
    "pages",
    "services",
    "tests",
    "utils",
    "playwright.config.ts",
  ]
}