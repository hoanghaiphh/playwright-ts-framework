{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "types": [
      "node",
      "playwright"
    ]
  },
  "include": [
    "tests",
    "pages",
    "utils",
    "playwright.config.ts",
    "configs/env.config.ts"
  ]
}