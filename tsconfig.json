{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@BasePage": [
        "pages/BasePage.ts"
      ],
      "@nopcommerce-admin/*": [
        "pages/nopcommerce-admin/*"
      ],
      "@nopcommerce-user/*": [
        "pages/nopcommerce-user/*"
      ],
      "@test-data/*": [
        "tests/data/*"
      ],
      "@test-helpers/*": [
        "tests/helpers/*"
      ],
      "@base-test": [
        "tests/helpers/base-test.ts"
      ],
      "@custom-expect": [
        "tests/helpers/custom-expect.ts"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@apis/*": [
        "utils/apis/*"
      ],
      "@factories/*": [
        "utils/factories/*"
      ],
      "@repos/*": [
        "utils/repositories/*"
      ],
      "@services/*": [
        "utils/services/*"
      ],
      "@env": [
        "env.config.ts"
      ],
    },
    "types": [
      "node",
      "playwright"
    ]
  },
  "include": [
    "pages",
    "scripts",
    "tests",
    "utils",
    "playwright.config.ts",
    "env.config.ts",
  ]
}