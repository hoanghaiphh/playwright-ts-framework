{
  "name": "playwright-ts-framework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "log:clean:all": "rimraf logs",
    "log:clean:combined": "rimraf logs/combined",
    "log:clean:error": "rimraf logs/error",
    "log:clean:runs": "rimraf logs/runs",
    "allure:test": "npx playwright test $@ --reporter=line,allure-playwright",
    "allure:test:oneworker": "npx playwright test $@ --reporter=line,allure-playwright --workers=1",
    "allure:clean": "rimraf allure-results playwright-report",
    "allure:serve": "ts-node utils/helpers/write-allure-env.ts ; allure serve allure-results",
    "allure:all": "npm run allure:clean ; npm run allure:test ; npm run allure:serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/exceljs": "^0.5.3",
    "@types/node": "^24.9.1",
    "@types/winston": "^2.4.4",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.4.2",
    "allure-playwright": "^3.4.2",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  }
